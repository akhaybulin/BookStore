@model List<BookReading.Models.Review>

<fieldset>
    <legend>Отзывы</legend>
    
    
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Author</th>
            <th scope="col">Review</th>
            <th scope="col">Like</th>
            <th scope="col">Report</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var review in Model)
        {
            if (!string.IsNullOrEmpty(@review.ReportReason))
            {
                continue;
            }

            <tr>
                <td>@Html.DisplayFor(m => review.AuthorId)</td>
                <td>@Html.DisplayFor(m => review.Text)</td>
                <td class="like-btn" data-review="@review.Id">
                    <span>Like: @Html.DisplayFor(m => review.LikeCount)</span>   
                </td>
                <td class="report-btn" data-review="@review.Id">    
                    <span>Report</span>   
                </td>
            </tr>
        }
        </tbody>
    </table>
</fieldset>
